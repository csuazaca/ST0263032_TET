extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3' class='panel panel-heading')

      if message.length > 0
        div(class='alert alert-success' role='alert')= message

      div(class='panel panel-info')
        div(class='panel-heading')= 'Iniciar Sesion'
        div(class='panel-body')
          form(action='http://10.131.137.177:3001/us/signin' method='post')
            div(class='form-group')
              label(for="email")= 'E-mail'
              input(type='email' name='username' id='email' placeholder='E-mail' class='form-control')
            div(class='form-group')
              label(for="password")= 'Password'
              input(type='password' name='password' id='password' placeholder='Password' class='form-control')
            div(class='form-group')
            button(type="enviar" class='btn btn-info' class='col-md-2 col-md-offset-10')= 'Ingresar'